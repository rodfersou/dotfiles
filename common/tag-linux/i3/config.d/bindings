set $environment_mode Keyboard: [W-k]US Alt; [k]US; [a]bnt; [t]ek
bindsym $mod1+e mode "environment"
mode "environment" {
    bindsym e       exec ~/.screenlayout/office.sh,                                       \
                    exec "setxkbmap 'us(altgr-intl)'; xmodmap ~/.Xmodmap.d/us_swap_keys", \
