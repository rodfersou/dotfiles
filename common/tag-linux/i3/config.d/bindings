set $open_mode Open: Chrome [W-o]Personal, [W-s]olomia, [W-g]uest; [f]irefox; [s]lack; [r]oblox; [g]Steam 
set $chrome google-chrome-stable --password-store=basic --profile-directory
set $brave brave-browser-stable --password-store=basic --profile-directory
bindsym $mod1+o mode "$open_mode"
mode "$open_mode" {
    bindsym $mod1+g exec $chrome=Guest,   mode "default"
    bindsym $mod1+s exec $chrome=Solomia, mode "default"
    bindsym $mod1+o exec $chrome=Pessoal, mode "default"

